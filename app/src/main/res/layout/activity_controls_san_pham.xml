<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quanlysanpham.sanpham.ControlsSanPham">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Controls Sản Phẩm"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Mã Sản Phẩm:"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            />

        <EditText
            android:id="@+id/txtMaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Tên Sản Phẩm:"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            />

        <EditText
            android:id="@+id/txtTenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Phân Loại        :"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            />

        <Spinner
            android:id="@+id/phanloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150dp"
            android:text="Nhập Mã Phân Loại:"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chọn hình"
            android:id="@+id/btnChonhinh"
            />


    </LinearLayout>



</LinearLayout>
