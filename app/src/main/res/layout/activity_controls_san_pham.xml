<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quanlysanpham.sanpham.ControlsSanPham">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitleSP"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Mã Sản Phẩm:"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            />

        <EditText
            android:id="@+id/txtMaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Tên Sản Phẩm:"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            />

        <EditText
            android:id="@+id/txtTenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Phân Loại        :"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            />

        <Spinner
            android:layout_marginTop="10sp"
            android:id="@+id/spnPhanloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Giá Sản Phẩm:"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            />

        <EditText
            android:id="@+id/txtGiaSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xuất Xứ Sản Phẩm  :"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            />

        <EditText
            android:id="@+id/txtXuatXuSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImgChonHinh"
            android:layout_marginTop="10sp"
            android:layout_width="100sp"
            android:layout_height="100dp"
            android:textColor="#000000"
            android:layout_marginLeft="10sp"
            />

        <Button
            android:layout_marginTop="30sp"
            android:layout_marginLeft="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chọn hình"
            android:id="@+id/btnChonhinh"
            />


    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiến Hành"
        android:layout_gravity="center"
        android:id="@+id/btnTienHanhSP"/>


</LinearLayout>
